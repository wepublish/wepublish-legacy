{
  "name": "@wepublish/example",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "run-p build:*",
    "build:client": "webpack --progress --mode production --devtool source-map",
    "build:server": "tsc",
    "watch": "run-p watch:**",
    "watch:client": "webpack --progress --mode development --watch --devtool cheap-eval-source-map",
    "watch:server:start": "nodemon ./dist/server.js",
    "watch:server:build": "tsc --watch",
    "start": "node ./dist/server.js",
    "sync-package-info": "exit 0"
  },
  "dependencies": {
    "@wepublish/server": "0.0.0",
    "dotenv-safe": "^6.1.0"
  },
  "devDependencies": {
    "@types/webpack": "^4.4.24",
    "@wepublish/client": "0.0.0",
    "@wepublish/worker": "0.0.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^8.0.1",
    "ts-loader": "^5.3.3",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "nodemon": "^1.18.9"
  }
}
